.b-masonry .row:nth-of-type(1) [ class*='col-md' ]:nth-of-type(1) .b-masonry__card
	-webkit-animation masonryCardAnimation 0.5s ease
	animation masonryCardAnimation 0.5s ease

.b-masonry .row:nth-of-type(1) [ class*='col-md' ]:nth-of-type(2) .b-masonry__card
	-webkit-animation masonryCardAnimation 0.5s ease 0.1s
	animation masonryCardAnimation 0.5s ease 0.1s

.b-masonry .row:nth-of-type(1) [ class*='col-md' ]:nth-of-type(3) .b-masonry__card
	-webkit-animation masonryCardAnimation 0.5s ease 0.2s
	animation masonryCardAnimation 0.5s ease 0.2s

.b-masonry .row:nth-of-type(2) [ class*='col-md' ]:nth-of-type(1) .b-masonry__card
	-webkit-animation masonryCardAnimation 0.5s ease 0.3s
	animation masonryCardAnimation 0.5s ease 0.3s

.b-masonry .row:nth-of-type(2) [ class*='col-md' ]:nth-of-type(2) .b-masonry__card
	-webkit-animation masonryCardAnimation 0.5s ease 0.05s
	animation masonryCardAnimation 0.5s ease 0.5s

.b-masonry .row:nth-of-type(2) [ class*='col-md' ]:nth-of-type(3) .b-masonry__card
	-webkit-animation masonryCardAnimation 0.5s ease 0.15s
	animation masonryCardAnimation 0.5s ease 0.15s

.b-masonry .row:nth-of-type(n+2) [ class*='col-md' ]:nth-of-type(n) .b-masonry__card
	-webkit-animation masonryCardAnimation 0.5s ease 0.25s
	animation masonryCardAnimation 0.5s ease 0.25s

@-webkit-keyframes masonryCardAnimation

	0%
    opacity 0
    transform translateY( 50px )
    
	100%
    opacity 1
    transform translateY(0)

@-webkit-keyframes masonryDecorAnimation

	0%
    opacity 0
    
	100%
    opacity 1
      