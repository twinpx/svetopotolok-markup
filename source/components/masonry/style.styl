@import '../../styl/component-include.styl'

.b-masonry
  text-align left
  
  .row
    margin-bottom 26px !important
    
    &:last-child
      margin-bottom 0
  
  &__card
    position relative
    opacity 0
    -webkit-animation-fill-mode forwards !important
    animation-fill-mode forwards !important
      
    .b-h4
      position absolute
      top 50px
      left 0
      width 100%
      text-align center
      font-size 14pt
      color #000
      font-family 'univia-pro', 'Russo One', sans-serif
      padding 0 20px
      pointer-events none
      
    &.i-inverse
      
      .b-h4
        top auto
        bottom 50px
        
  &__img
    display block
    padding-top 133%
    background-repeat no-repeat
    background-position center top
    background-size cover
      
  &__text
    background-color #f4f4f4
    font-size 8pt
    padding 20px 35px 20px 68px
    margin-left 30px
    color #000
    font-family "Helvetica Neue", Helvetica, Arial, sans-serif
    line-height 1.7
    
    @media( min-width 768px ) and ( max-width 1199px )
      padding 20px
      
    
