@import '../../styl/component-include.styl'

.b-top-menu
  text-align center
  font-size 12pt
  padding 30px 0 28px
  border-bottom 2px solid #000
  font-family 'univia-pro', 'Russo One', sans-serif
  
  a
    margin 0 22px
    color #000
    
    &:hover
      color #0164ea
      text-decoration none
      
    &:active,
    &:focus
      color rgba( 1,100,234,0.7 )
      text-decoration none
      
    @media( max-width 767px )
      text-align center
      display block
    