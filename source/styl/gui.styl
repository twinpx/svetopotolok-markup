body
  color #000
  font-size 11pt
  font-family 'Open Sans', Arial, sans-serif
  font-weight 300
  -webkit-font-smoothing antialiased
  font-smooth always
  line-height 1.7
  
hr
  border-top-color transparent
  
  &.i-size-S
    margin 6px 0
  
  &.i-size-M
    margin 30px 0
  
  &.i-size-L
    margin 50px 0
  
  &.i-line
    border-top 2px solid #000
    
a
  transition( color 0.3s linear )
  
h1,
.b-h1,
h2,
.b-h2
  font-size 19pt
  margin-bottom 12px
  font-family 'univia-pro', 'Russo One', sans-serif
  line-height 1.3
  
h3,
.b-h3
  font-size 14pt
  font-family 'univia-pro', 'Russo One', sans-serif
  line-height 1.4
  
.btn
  padding 0 24px
  font-size 8pt
  line-height 40px
  border-radius 20px
  border-color transparent
  transition( all 0.3s ease )
  
  &.active,
  &:active
    box-shadow none
    outline none
    border-color transparent
        
  &.i-size-L
    line-height 58px
    border-radius 30px
    font-size 10.5pt
  
  &-default
    background-color #dedede
    border-color transparent
      
    &:hover
      background-color #0164ea
      border-color transparent
      color #fff
      
    &:active
    
      &,
      &:hover
        background-color rgba( 1,100,234,0.7 )
        border-color transparent
        outline none
        color #fff
  
  &-type-2
    background-color #fff
    border 3px solid #0066ff
    line-height 34px
      
    &:hover
      background-color #fff
      border 3px solid #0066ff
      
    &:active
    
      &,
      &:hover
        background-color rgba( 1,100,234,0.7 )
        border 3px solid #0066ff
        outline none
        color #fff
        
    &.i-size-L
      line-height 54px
      border-radius 30px
        
ul
  margin 0 0 0 20px
  padding 0

  li
    list-style-type none
    background embedurl( 'img/dash.gif' ) no-repeat 0 13px
    padding 0 0 0 20px
    margin 12px 0